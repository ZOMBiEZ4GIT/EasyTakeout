# Auto detect text files and perform LF normalization
* text=auto

# Explicitly declare text files you want to always be normalized and converted
# to native line endings on checkout.
*.py text eol=lf
*.js text eol=lf
*.ts text eol=lf
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.csv text eol=lf
*.xml text eol=lf
*.html text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.sass text eol=lf

# Declare files that will always have CRLF line endings on checkout.
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Denote all files that are truly binary and should not be modified.
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.bmp binary
*.tiff binary
*.webp binary
*.svg binary
*.pdf binary
*.mp4 binary
*.avi binary
*.mov binary
*.mkv binary
*.mp3 binary
*.wav binary
*.flac binary
*.zip binary
*.tar binary
*.gz binary
*.7z binary
*.rar binary
*.exe binary
*.dll binary
*.so binary
*.dylib binary
*.app binary
*.dmg binary
*.pkg binary
*.msi binary
*.whl binary

# Python specific
*.pyc binary
*.pyo binary
*.pyd binary
*.egg binary

# Archive formats
*.tar.gz binary
*.tar.bz2 binary
*.tar.xz binary

# Fonts
*.ttf binary
*.otf binary
*.eot binary
*.woff binary
*.woff2 binary

# Documents
*.doc binary
*.docx binary
*.xls binary
*.xlsx binary
*.ppt binary
*.pptx binary

# Jupyter notebooks - treat as text but with special handling
*.ipynb text

# Configuration files that should maintain their line endings
.gitignore text eol=lf
.gitattributes text eol=lf
.editorconfig text eol=lf

# Makefiles require tabs
Makefile text eol=lf

# Shell scripts (unix)
*.sh text eol=lf

# License files
LICENSE* text eol=lf
COPYING* text eol=lf

# Documentation
README* text eol=lf
CHANGELOG* text eol=lf
CONTRIBUTING* text eol=lf
AUTHORS* text eol=lf
HISTORY* text eol=lf
NEWS* text eol=lf

# Git files
.gitkeep text eol=lf

# GitHub specific
.github/**/*.md text eol=lf
.github/**/*.yml text eol=lf
.github/**/*.yaml text eol=lf
